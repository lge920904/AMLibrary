<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="1dp"
    android:scrollbars="vertical"
    android:fadeScrollbars="true"
    android:verticalScrollbarPosition="right"
    tools:context=".InformationActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/contestJudgeEventImg"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:padding="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp">

            <Button
                android:id="@+id/contest_join"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button1"
                android:text="◁공모전참여"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>
            <Button
                android:id="@+id/specificInfoButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button1"
                android:text="상세설명 및 경품"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <Button
                android:id="@+id/contest_judge"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button1"
                android:text="심사참여▷"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/eventSummaryImg"
            android:layout_width="fill_parent"
            android:layout_height="700dp"
            android:adjustViewBounds="true"
            android:padding="2dp" />

        <TextView
            android:id="@+id/eventSummaryText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>

